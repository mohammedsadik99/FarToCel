pipeline {
    agent any
    
    environment {
        GITHUB_REPO = 'https://github.com/mohammedsadik99/FarToCel'
    }
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: "https://github.com/mohammedsadik99/FarToCel"
            }
        }
        
        stage('Build') {
            steps {
                sh 'maven clean install'
            }
        }
        
        stage('Test') {
            steps {
                sh 'maven test'
            }
            post {
                success {
                    // Publish JUnit test results
                    junit '**/target/surefire-reports/TEST-*.xml'
                    
                    // Generate JaCoCo code coverage report
                    jacoco(execPattern: '**/target/jacoco.exec')
                }
            }
        }
    }
}
